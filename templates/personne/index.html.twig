{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!{% endblock %}

{% block body %}
    <div class="form-group">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.dateDeNaissance) }}

        {{ form_row(form.submit, { 'label': 'Ajouter' }) }}
        {{ form_end(form) }}
    </div>

    <a class="btn btn-info" href="{{ path("list_personne")}}">Visualiser</a>
{% endblock %}
